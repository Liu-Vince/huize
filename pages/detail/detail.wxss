page{
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}
::-webkit-scrollbar {
  display: none;
}
.item{
  background-color: white;
  width: calc(96% - 30px);
  margin:5px auto;
  padding: 10px 15px;
}
.item-author{
  display: flex;
  color: #b3b3b3;
}
.item-author-img{
  width: 30px;
  height: 30px; 
}
.item-author-name{
  line-height: 30px;
  font-size: 14px;
  margin-left: 10px;
  width: 100%;
}
.item-text{
  font-size: 13px;
  color: #b3b3b3;
  margin:10px auto;
  line-height: 30px;
}
.item-info{
  display: flex;
  font-size: 14px;
  color: #b3b3b3;
}
.item-info-time{
  margin-right: auto;
}
.item-info-delete{
  margin-right: 20px;
  color: rgb(182, 0, 0);
}
.images{
  margin: 10px 0;
  width: 100%;
}
.image{
  height: 200rpx;
  width: 200rpx;
}
.text{
  background-color: white;
  width: calc(96% - 30px);
  margin:0 auto 5px auto;
  padding: 10px 15px;
  font-size: 14px;
  color: #000000;
  line-height: 30px;
}
.comment-btn{
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  border-radius: 0;
  background-color: #ffffff;
  color: #000000;
  width: 150px;
  margin-right: 2%;  
}